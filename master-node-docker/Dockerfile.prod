FROM alpine

ADD sentinel /root/sentinel

ADD app.py server.py run.sh /root/

ENV SENT_ENV=PROD

RUN apk add --no-cache gcc gmp-dev libffi-dev make mongodb musl-dev openssl-dev python3 python3-dev redis && \
    mkdir -p /data/db && \
    wget -c https://bootstrap.pypa.io/get-pip.py -O /tmp/get-pip.py && \
    python3 /tmp/get-pip.py && \
    pip3 install --no-cache-dir bitcoin ethereum eth_keyfile falcon falcon_cors gevent gunicorn pymongo raven redis && \
    pip3 install --no-cache-dir rlp==0.6.0 web3==3.16.5 && \
    rm -rf /tmp/* /var/tmp/* /var/cache/apk/* /var/cache/distfiles/* /root/.cache .wget-hsts

EXPOSE 8000

CMD ["sh", "/root/run.sh"]
